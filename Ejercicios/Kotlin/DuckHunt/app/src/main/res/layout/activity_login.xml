<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.LoginActivity"
    android:background="@drawable/bg_game">

    <ImageView
        android:id="@+id/imgLoginTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etLoginNickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditText"
        android:hint="@string/et_nick_name"
        android:layout_below="@+id/imgLoginTitulo"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnLoginIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginNickName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="@string/btn_iniciar_juego"
        style="@style/Button"
        />

</RelativeLayout>