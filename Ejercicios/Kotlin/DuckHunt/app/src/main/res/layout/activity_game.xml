<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.game.GameActivity"
    android:background="@drawable/bg_game">

    <ImageView
        android:id="@+id/imgGameDuckHunt"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_encabezado_game_20_dp"
        android:src="@drawable/duck_hunt_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGameCounter"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/imgGameDuckHunt"
        app:layout_constraintStart_toEndOf="@+id/imgGameDuckHunt"
        app:layout_constraintTop_toTopOf="@+id/imgGameDuckHunt"
        style="@style/TextView"/>

    <TextView
        android:id="@+id/tvGameUserName"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="USER NAME"
        app:layout_constraintBottom_toBottomOf="@+id/tvGameRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvGameRegistro"
        style="@style/TextView"/>

    <ImageView
        android:id="@+id/imgGameTimer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/ic_timer"
        app:layout_constraintBottom_toBottomOf="@+id/tvGameUserName"
        app:layout_constraintTop_toTopOf="@+id/tvGameUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvGameTimer"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="60s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imgGameTimer"
        app:layout_constraintStart_toEndOf="@+id/imgGameTimer"
        app:layout_constraintTop_toTopOf="@+id/imgGameTimer"
        style="@style/TextView"/>

    <ImageView
        android:id="@+id/imgGameDuck"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/duck"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="158dp" />

</androidx.constraintlayout.widget.ConstraintLayout>